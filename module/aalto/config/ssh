# General login servers
Host kosh
    User <aalto-username>
    Hostname kosh.aalto.fi
    IdentityFile ~/.ssh/id_ed25519_aalto

Host lyta
    User <aalto-username>
    Hostname lyta.aalto.fi
    IdentityFile ~/.ssh/id_ed25519_aalto

# Light-computing servers
Host brute
    User <aalto-username>
    Hostname brute.aalto.fi
    IdentityFile ~/.ssh/id_ed25519_aalto

Host force
    User <aalto-username>
    Hostname force.aalto.fi
    IdentityFile ~/.ssh/id_ed25519_aalto

# HPC slurm cluster
Host triton1
    User <aalto-username>
    Hostname triton.aalto.fi
    ProxyJump kosh
    # IdentityFile ~/.ssh/id_ed25519_triton

Host triton2
    User <aalto-username>
    Hostname triton.aalto.fi
    ProxyJump lyta
    # IdentityFile ~/.ssh/id_ed25519_triton
